/**index.wxss**/
@import "./index.skeleton.wxss";
.clearfix::after {
    content: "";
    display: block;
    clear: both;
  }
.page-body{
    background-color: yellow;
}
.weui-cell{
    display: flex;
}
.weui-input{
    width: 60%;
    background-color: red;
}
.searchimgbox{
    width: 10rpx;
    position: fixed;
    top: 0;
}
.searchicon{
    width: 100%;
    scale: 0.1;
    display:inline-block;

}

.swiper {

    height: 421.5rpx;

}

swiper-item image {

    width: 100%;

    height: 100%;

}

.swiper-container{

  position: relative;

}

.swiper-container .swiper{

  height: 400rpx;

}

.swiper-container .swiper .img{

  width: 100%;

  height: 100%;

}
.content{
    margin: 13px;
    text-align: justify; 
    }
    .left,.right{
    display: inline-block;
    vertical-align: top;
    width: 49%;
    }
    .right{
    float: right;
    }

    .recommendbox{
        width: 100%;
        height: 400px;
        /* background-color: red; */
    }
    .recommendbox .box-title{
        font-weight: bold;
        font-size: 16px;
        padding-left: 14rpx;
        margin-bottom: 10rpx;
    }
    .recommend-list{
        width: 100%;
        /* height: 300px; */
        /* background-color: greenyellow; */
        overflow: hidden;
        column-count: 1;
        /* 纵队间隔 */
        column-gap: 10px;
        column-width: 170rpx;
        
    }
    .recommend-list .list-item{
        width: 48%;
        height: 554rpx;
        background-color: #f8f8f8;
        float: left;
        margin-left:11rpx;
        margin-bottom: 10rpx;
        box-shadow: 0 0 1px 1px rgba(158,179,193,.5);
        break-inside: avoid;
        position: relative;
    }
    .recommend-list .list-item .item-img{
        width: 100%;
        display: block;
    }
    .recommend-list .list-item .item-bottom{
        width: 100%;
        padding: 0px 10rpx;
        box-sizing: border-box;
    }
    .item-bottom .item-title{
        width: 98%;
        white-space:normal; 
        font-size: 18px;
        font-weight: bold;
        /* overflow: hidden; */
        margin-bottom:20rpx;
        position: absolute;
        bottom: 57px;
    }

    .desc{
        width:97%;
        overflow: hidden; 
        white-space: nowrap; 
        text-overflow: ellipsis;
        color: #919191;
        font-size: 14px;
        margin-bottom: 20rpx;
        position: absolute;
        bottom: 39px;
    }
    .securities{
        /* width: 190rpx; */
        font-size: 12px;
        color: #eab57e;
        border:1.5px solid #eab57e;
        font-weight: bold;
        border-radius: 6rpx;
        overflow: hidden;
        margin-bottom: 10rpx;
        float: left;
        padding: 6rpx;
        margin-right: 8rpx;
    }
    .securities-text{
        background-color: #f76808;
        padding: 4rpx;
        color: white;
        margin-right: 10rpx;
        font-weight: normal;
    }
    .pricebox{
        width: 100%;
        position: absolute;
        bottom: 0;
        
    }
    .price{
        font-weight: bold;
        margin-bottom: 20rpx;
        float: left;
        color: #fd5735;
    }
    .price-text{
        font-size: 14px;
    }
    .postprice{
        font-size: 16px;
        color: #b2b2b2;
        text-decoration: line-through;
        float: left;
        margin-left: 20rpx;
    }

    .img_item {
        width: 48%;
        margin: 1%;
        display: inline-block;
        vertical-align: top;
      }
      .gotop{
          width: 80rpx;
          height: 80rpx;
          /* background-color:red; */
          border-radius: 10px;
          overflow: hidden;
          position: fixed;
          bottom: 120rpx;
          right: 20rpx;
          z-index: 10;
          border: 2px solid #e8e8e8;
      }
      .gotop-img{
          width: 100%;
          height: 100%;
      }