}
.headtitle{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: white;
    border-bottom: 1px solid #e8e8e8;
}
.cartbox{
    width: 100%;
    /* height: 400rpx; */
    background-color: white;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    padding-right: 20rpx;
}
.cart-state{
    width: 100%;
    text-align: right;
    padding: 20rpx 0px;
    padding-right: 40rpx;
    border-bottom: 1px solid #e8e8e8;
    color: #e16c33;
 
    
}
.cartshop{
    width: 100%;
    height: 300rpx;
    border-bottom: 1px solid #e8e8e8;
    /* padding: 40rpx ; */
    display: flex;
}
.cartimgbox{
    width: 200rpx;
    height: 200rpx;
    margin-top: 50rpx;
}
.cartimg{
    width: 100%;
    height: 100%;
}
.carttext{
    width: 50%;
    height: 240rpx;
    /* background-color: greenyellow; */
    margin-top: 30rpx;
}
.cartname{
    font-size: 18px;
    margin-bottom: 20rpx;
    color: black;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
}
.carttype{
    color: #c0c0c0;
}
.cartpricebox{
    width: 200rpx;
    height: 120rpx;
    /* background-color: blanchedalmond; */
    color: #b4b4b4;
    text-align:right;
    padding-right: 20rpx;
    margin-top: 90rpx;
}

.cartprice{
    font-size: 18px;
    margin-bottom: 20rpx;
}
.cartpricebox text{
    font-size: 12px;
}
.totalbox{
    width: 100%;
    height: 40px;
    /* padding: 40rpx; */
    display: flex;
    justify-content:space-between;
    margin-top: 20rpx;

}
.createdate{
    color: #bdbdbd;
    font-size: 12px;
    padding-left: 20rpx;
    
}
.totaltext{
    /* width: 60%; */
    padding-right: 20rpx;
    display: flex; 
    font-size: 14px;
    white-space: nowrap;
   
}
.totalprice{
    color: #bdbdbd;
    font-size: 16px;
}
.totalprice text{
    font-size: 12px;
}
.btnbox{
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding-right: 40rpx;
}
.btn{
    width: 120rpx;
    height: 40rpx;
    padding: 20rpx;
    border: 1px solid #db804e;
    text-align: center;
    line-height: 40rpx;
    border-radius: 8rpx;
    white-space: nowrap;
    margin-right: 20rpx;
    font-size: 14px;
    color: #db804e;
}
.delform{
    color: #615c5c;
    border: 1px solid #615c5c;
}

