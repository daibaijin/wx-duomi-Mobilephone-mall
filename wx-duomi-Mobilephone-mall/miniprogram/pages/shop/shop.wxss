/* pages/shop/shop.wxss */

.gologin{
    width: 96%;
    height: 50px;
    background-color: white;
    border-radius: 10px;
   
    margin: auto;
    margin-top: 20rpx;
    overflow: hidden;
    
}
.box-login{
    display: flex;
    justify-content: flex-end;
    margin-top: 30rpx;
}
.loginbox{
    width: 20px;
    height: 20px;
}
.select-icon{
    width: 100%;
    height: 100%;
}

/* 推荐 */
.recommendbox{
    width: 100%;
    height: 400px;
    /* background-color: red; */
}
.recommendbox .box-title{
    font-weight: bold;
    font-size: 16px;
    padding-left: 14rpx;
    margin-bottom: 10rpx;
}
.recommend-list{
    width: 100%;
    /* height: 300px; */
    /* background-color: greenyellow; */
    overflow: hidden;
    column-count: 1;
    /* 纵队间隔 */
    column-gap: 10px;
    column-width: 170rpx;
    
}
.recommend-list .list-item{
    width: 48%;
    height: 554rpx;
    background-color: #f8f8f8;
    float: left;
    margin-left:11rpx;
    margin-bottom: 10rpx;
    box-shadow: 0 0 1px 1px rgba(158,179,193,.5);
    break-inside: avoid;
    position: relative;
}
.recommend-list .list-item .item-img{
    width: 100%;
    display: block;
}
.recommend-list .list-item .item-bottom{
    width: 100%;
    padding: 0px 10rpx;
    box-sizing: border-box;
}
.item-bottom .item-title{
    width: 98%;
    white-space:normal; 
    font-size: 18px;
    font-weight: bold;
    /* overflow: hidden; */
    margin-bottom:20rpx;
    position: absolute;
    bottom: 57px;
}

.desc{
    width:97%;
    overflow: hidden; 
    white-space: nowrap; 
    text-overflow: ellipsis;
    color: #919191;
    font-size: 14px;
    margin-bottom: 20rpx;
    position: absolute;
    bottom: 39px;
}
.securities{
    /* width: 190rpx; */
    font-size: 12px;
    color: #eab57e;
    border:1.5px solid #eab57e;
    font-weight: bold;
    border-radius: 6rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
    float: left;
    padding: 6rpx;
    margin-right: 8rpx;
}
.securities-text{
    background-color: #f76808;
    padding: 4rpx;
    color: white;
    margin-right: 10rpx;
    font-weight: normal;
}
.pricebox{
    width: 100%;
    position: absolute;
    bottom: 0;
    
}
.price{
    font-weight: bold;
    margin-bottom: 20rpx;
    float: left;
    color: #fd5735;
}
.price-text{
    font-size: 14px;
}
.postprice{
    font-size: 16px;
    color: #b2b2b2;
    text-decoration: line-through;
    float: left;
    margin-left: 20rpx;
}

